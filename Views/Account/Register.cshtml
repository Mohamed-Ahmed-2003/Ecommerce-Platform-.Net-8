@using static OtlobLap.Data.Utility
@model OtlobLap.ViewModels.RegisterVM

@{
    Layout = null;
}

<link href="~/css/access.css" rel="stylesheet" />

<div class="container">
    <header>@Utility.GetTranslation("Registration")</header>
    <div class="progress-bar">
        <div class="step">
            <p>@Utility.GetTranslation("Name")</p>
            <div class="bullet">
                <span>1</span>
            </div>
            <div class="check "></div>
        </div>
        <div class="step">
            <p>@Utility.GetTranslation("Contact")</p>
            <div class="bullet">
                <span>2</span>
            </div>
            <div class="check"></div>
        </div>
        <div class="step">
            <p>@Utility.GetTranslation("Identity")</p>
            <div class="bullet">
                <span>3</span>
            </div>
        </div>

         <div class="step">
                <p>@Utility.GetTranslation("Submit")</p>
                <div class="bullet">
                    <span>4</span>
                </div>
                <div class="check"></div>
        </div>
    </div>

    <div class="form-outer">
        <form method="post" asp-action="Register" asp-controller="Account">
            <div class="page slide-page">
                <div class="title">@Utility.GetTranslation("GeneralInfoTitle")</div>
                <div class="field">
                    <div class="label">@Utility.GetTranslation("FullName")</div>
                    <input type="text" asp-for="FullName">
                </div>
                <div class="field">
                    <button class="firstNext next">@Utility.GetTranslation("Next")</button>
                </div>
            </div>

            <div class="page">
                <div class="title">@Utility.GetTranslation("Contact")</div>
                <div class="field">
                    <div class="label">@Utility.GetTranslation("Email")</div>
                    <input type="email" asp-for="Email">
                </div>
                <div class="field">
                    <div class="label">@Utility.GetTranslation("Phone")</div>
                    <input type="tel" asp-for="Phone">
                </div>
                <div class="field btns">
                    <button type="button" class="prev-1 prev">@Utility.GetTranslation("Previous")</button>
                    <button type="button" class="next-1 next">@Utility.GetTranslation("Next")</button>
                </div>
            </div>

            <div class="page">
                <div class="title">@Utility.GetTranslation("Identity")</div>
                <div class="field">
                    <div class="label">@Utility.GetTranslation("RoleName")</div>
                    <select asp-for="Role">
                        <option value="Customer">@Utility.GetTranslation(Roles.Customer.ToString())</option>
                        <option value="Seller">@Utility.GetTranslation(Roles.Seller.ToString())</option>
                    </select>
                </div>
                <div class="field btns">
                    <button type="button" class="prev-2 prev">@Utility.GetTranslation("Previous")</button>
                    <button type="button" class="next-2 next">@Utility.GetTranslation("Next")</button>
                </div>
            </div>

            <div class="page">
                <div class="title">@Utility.GetTranslation("Password")</div>
                <div class="field">
                    <div class="label">@Utility.GetTranslation("Password")</div>
                    <input type="password" asp-for="Password">
                </div>
                <div class="field">
                    <div class="label">@Utility.GetTranslation("ConfirmPassword")</div>
                    <input type="password" asp-for="ConfirmPassword">
                </div>
                <div class="field btns">
                    <button type="button" class="prev-3 prev">@Utility.GetTranslation("Previous")</button>
                    <button type="submit" class="submit">@Utility.GetTranslation("Submit")</button>
                </div>
            </div>
        </form>
        <p>
            @Utility.GetTranslation("HaveAccount") <a asp-action="Login" style="text-decoration:none;" asp-controller="Account">@Utility.GetTranslation("Login")</a>
        </p>
    </div>
</div>

<script src="~/js/access.js"></script>
