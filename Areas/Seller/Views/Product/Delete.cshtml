@model OtlobLap.Models.Product



<h3>@Utility.GetTranslation("ConfirmProductDelete")</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Utility.GetTranslation(Html.DisplayNameFor(model => model.Name))
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Utility.GetTranslation(Html.DisplayNameFor(model => model.Brand))
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class="col-sm-2">
            @Utility.GetTranslation(Html.DisplayNameFor(model => model.ShortDescription))
        </dt>
        <dd class="col-sm-10">
            @Model.ShortDescription
        </dd>
        <dt class="col-sm-2">
            @Utility.GetTranslation(Html.DisplayNameFor(model => model.Description))
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Description)
        </dd>
        <dt class="col-sm-2">
            @Utility.GetTranslation(Html.DisplayNameFor(model => model.AvailableInStock))
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AvailableInStock)
        </dd>
        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.ProductImage) *@
        </dt>
        <dd class="col-sm-10">
            @* <img width="50px" height="50px" src="~/Images/Products/@Model.ProductImage" /> *@
        </dd>

        @if (Model.ProductCategories != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductCategories)
            </dt>
            <dd class="col-sm-10">
                @foreach (var item in Model.ProductCategories)
                {
                    <span class="btn btn-success">@item.Category.Name</span>
                }
            </dd>
        }
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">@Utility.GetTranslation("BackToProductsLink")</a>
    </form>
</div>
